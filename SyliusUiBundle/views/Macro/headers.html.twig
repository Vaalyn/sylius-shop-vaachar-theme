{% macro default(header, icon, subheader, inverted = false) %}
<h1 class="ui {% if inverted == true %}inverted{% endif %} header">
    {% if icon is not empty %}
    <i class="circular {{ icon }} {% if inverted == true %}inverted{% endif %} icon"></i>
    {% endif %}
    <div class="content">
        {{ header }}
        {% if subheader is not empty %}
        <div class="sub header">{{ subheader }}</div>
        {% endif %}
    </div>
</h1>
{% endmacro %}
